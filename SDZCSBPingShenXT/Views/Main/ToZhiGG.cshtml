            $.post("/UnitHome/Notice/SelectNoticer", function (data) {
                for (var i = 0; i < data.length; i++) {
                    if (data[i].NoticeTypeID == 2) {
                        $("#Trueone").append("<div class='NoticeDiv'><label>[" + data[i].ReleaseTimeStrr + "] <span class='mySpan'><a class ='ewew' onclick='OpenViewNotice(" + data[i].NoticeID + ")'>" + data[i].NoticeName + "</a></span></label><br/>");
                    }
                }
            });
        }

