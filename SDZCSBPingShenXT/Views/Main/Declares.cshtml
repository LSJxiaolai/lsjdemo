            $.post("/UnitHome/Notice/SelectNoticer", function (data) {
                for (var i = 0; i < data.length; i++) {
                    if (data[i].NoticeTypeID == 2) {
                        $("#TZGG").append("<div class='NoticeDiv'><label>[" + data[i].ReleaseTimeStrr + "] <span class='mySpan'><a class ='ewew' onclick='OpenViewNotice(" + data[i].NoticeID + ")'>" + data[i].NoticeName + "</a></span></label><br/>");
                    }
                   else if (data[i].NoticeTypeID == 6) {
                       $("#RZZG").append("<div class='NoticeDiv'><label>[" + data[i].ReleaseTimeStrr + "] <span class='mySpan'><a class ='ewew' onclick='OpenViewNotice(" + data[i].NoticeID + ")'>" + data[i].NoticeName + "</a><a style='color:red'>New</a></span></label><br/>");
                   }
                   else if (data[i].NoticeTypeID == 3) {
                       $("#XGZC").append("<div class='NoticeDiv'><label>[" + data[i].ReleaseTimeStrr + "] <span class='mySpan'><a class ='ewew' onclick='OpenViewNotice(" + data[i].NoticeID + ")'>" + data[i].NoticeName + "</a><a style='color:red'>New</a></span></label><br/>");
                   }
                   else if (data[i].NoticeTypeID == 5) {
                       $("#GYWM").append("<div class='NoticeDiv'><label>[" + data[i].ReleaseTimeStrr + "] <span class='mySpan'><a class ='ewew' onclick='OpenViewNotice(" + data[i].NoticeID + ")'>" + data[i].NoticeName + "</a><a style='color:red'>New</a></span></label><br/>");
                   }
                }
            });
        }

